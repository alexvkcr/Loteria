<% 	page_to||="checklogin"
	boton||= "Acceder"
%>
<%= form_tag(page_to, method: "post")  do%>
	<div>
		<p><%= flash.notice %></p>
		<p><%= "Usuario" %> <%= text_field_tag 'user' %></p>
		<p><%= "Contraseña" %> <%= password_field_tag 'password' %></p>
		<p><%= submit_tag boton%></p>
		<p> <%= link_to "¿Desea crear una cuenta?" , "registro"%></p> 
	</div>
<% end %>